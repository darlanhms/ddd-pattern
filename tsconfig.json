{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6"
    ],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "removeComments": true,
    "baseUrl": ".",
    "paths": {
      "@core/*": ["./src/core/*"],
      "@utils/*": ["./src/utils/*"],
      "@user/*": ["./src/modules/user/*"]
    }
  }
}
